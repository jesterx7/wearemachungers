<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ext="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCoverInformasi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <com.example.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                    android:id="@+id/tvSejarahMachung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sejarah Ma Chung"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <com.example.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                    android:id="@+id/tvVisiMisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visi dan Misi Ma Chung"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border">
                    <com.example.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                        android:id="@+id/tvInfoFakultas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Fakultas"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/imgExpandFaculty"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:layout_gravity="end"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llListFakultas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <com.example.user.wearemachungers.CustomFonts.LightRobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sains dan Teknologi"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/imgDetailFST"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_keyboard_arrow_right"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <com.example.user.wearemachungers.CustomFonts.LightRobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ekonomi dan Bisnis"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/imgDetailFEB"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_keyboard_arrow_right"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <com.example.user.wearemachungers.CustomFonts.LightRobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ilmu dan Bahasa"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/imgDetailFIB"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_keyboard_arrow_right"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>