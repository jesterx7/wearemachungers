<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgCoverFaculty"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <com.machungapp.user.wearemachungers.CustomFonts.OpenSansSemiBoldTextView
                    android:id="@+id/tvFacultyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
                <com.machungapp.user.wearemachungers.CustomFonts.LightRobotoTextView
                    android:id="@+id/tvFacultyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"/>
                <com.machungapp.user.wearemachungers.CustomFonts.OpenSansRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Department"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMajorList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp">
                </android.support.v7.widget.RecyclerView>>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>