<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCoverSejarah"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <com.machungapp.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sejarah Universitas Ma Chung\n"
                    android:textSize="18dp"/>
                <com.machungapp.user.wearemachungers.CustomFonts.LightRobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diawali dengan Kesederhanaan, Mengukir Masa Depan Gemilang\n"
                    android:textSize="16dp"/>
                <com.bluejamesbond.text.DocumentView
                    android:id="@+id/dvSejarahMachung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:documentView_textAlignment="justified"></com.bluejamesbond.text.DocumentView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>