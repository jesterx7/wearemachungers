<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgVisiMisiCover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <com.machungapp.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visi : "
                    android:textSize="18dp" />

                <com.bluejamesbond.text.DocumentView
                    android:id="@+id/dvVisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:documentView_textSize="14dp"
                    app:documentView_textAlignment="justified"></com.bluejamesbond.text.DocumentView>

                <com.machungapp.user.wearemachungers.CustomFonts.OpenSansBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misi : "
                    android:textSize="18dp" />

                <com.bluejamesbond.text.DocumentView
                    android:id="@+id/dvMisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:documentView_textSize="14dp"
                    app:documentView_textAlignment="justified"></com.bluejamesbond.text.DocumentView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>